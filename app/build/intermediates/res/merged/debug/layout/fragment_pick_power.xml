<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_bg_gradient"
    tools:context="com.example.alex.herome.fragments.PickPowerFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#253748"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/top_banner_bar" />

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:text="Pick A Power"
            android:textAllCaps="true"
            android:textColor="#FAC740"
            android:textSize="27sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/turtlePowerBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/turtle_power"
            android:paddingLeft="9dp"
            android:text="Turtle Power"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/lightningPowerBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/thors_hammer"
            android:paddingLeft="9dp"
            android:text="Lightning"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/flightPowerBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/super_man_crest"
            android:paddingLeft="9dp"
            android:text="Flight"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/webPowerBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/spiderweb"
            android:paddingLeft="9dp"
            android:text="Web Slinging"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/laserPowerBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/laser_vision"
            android:paddingLeft="9dp"
            android:text="Laser Vision"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/strengthPowerBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/super_strength"
            android:paddingLeft="9dp"
            android:text="Super Strength"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/backstoryBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/hero_solid_button"
            android:backgroundTint="#FAC740"
            android:text="SHOW BACKSTORY"
            android:textColor="#000" />

    </LinearLayout>

</FrameLayout>
